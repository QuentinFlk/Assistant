@using Syncfusion.EJ2
@model Assistant_Interface.Models.ViewModels.GestionAssistantViewModel
@{
    ViewData["Title"] = "Gestion des Assistants";
    var timestamp = DateTime.Now.ToString("yyyyMMddHHmmssfff");
    <script type="text/javascript" src="~/lib/mask-plugin/src/jquery.mask.js"></script>
    // <script src="js/CA/CA-GestionAssistant.js?@timestamp"></script>
    <script src="js/CA/CA-GestionAssistant.js"></script>
}

<div class="row">
    <div class="col-12" style="background: white">
        <div class="inner-partie-droite p-4">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <ul class="nav nav-tabs nav-tabs-flk" id="tabsFacturation" role="tablist">
                            <li class="nav-item" role="infos_facturation">
                                <a class="nav-link active" id="assistant-actif-tab" data-toggle="tab" href="#assistant-actif" role="tab" aria-controls="assistant-actif" aria-selected="true">Assistants actifs</a>
                            </li>
                            <li class="nav-item" role="infos_facturation">
                                <a class="nav-link" id="assistant-inactif-tab" data-toggle="tab" href="#assistant-inactif" role="tab" aria-controls="assistant-inactif" aria-selected="false">Assistants inactifs</a>
                            </li>
                        </ul>
                        <div class="tab-content" id="myTabsFacturation">
                            <div class="tab-pane fade show active pt-4 ml-5" id="assistant-actif" role="tabpanel" aria-labelledby="assistant-actif-tab">
                                <div class="container-fluid px-0">
                                    <div class="row">
                                        <div class="col-12" id="tableau-assistant-actif-partial-view">
                                            @await Html.PartialAsync("PartialView/TableauAssistantActif_PartialView", @Model)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade pt-4 ml-5" id="assistant-inactif" role="tabpanel" aria-labelledby="assistant-inactif-tab">
                                <div class="container-fluid px-0">
                                    <div class="row">
                                        <div class="col-12" id="tableau-assistant-inactif-partial-view">
                                            @await Html.PartialAsync("PartialView/TableauAssistantInactif_PartialView", @Model)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.EJS().ScriptManager()